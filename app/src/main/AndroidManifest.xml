<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartkartapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Screens -->
        <activity android:name=".RegisterPage" />
        <activity android:name=".LoginPage" />
        <activity android:name=".RegLogChoice" />
        <activity android:name=".AdminLogin" />
        <activity android:name=".StaffLogin" />

        <!-- Home & Role-based Dashboards -->
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdminHomePage" />
        <activity android:name=".StaffHomePage" />

        <!-- Order Management -->
        <activity android:name=".PlaceOrder" />
        <activity android:name=".AcceptOrders" />
        <activity android:name=".CurrentOrderStatus" />
        <activity android:name=".OrderHistoryActivity" />

        <!-- Stock Management -->
        <activity android:name=".AddStock" />
        <activity android:name=".AddStaff" />

        <!-- Product Categories -->
        <activity android:name=".DisplayItem" />
        <activity android:name=".Clothing" />
        <activity android:name=".MensClothing" />
        <activity android:name=".WomensClothing" />
        <activity android:name=".tShirts" />
        <activity android:name=".Formals" />
        <activity android:name=".BottomWear" />
        <activity android:name=".Shoes" />
        <activity android:name=".Books" />
        <activity android:name=".Electronics" />
        <activity android:name=".OtherItems" />
        <activity android:name=".SendMessageActivity" />


        <!-- Extra Pages -->
        <activity android:name=".ProfileActivity" />
        <activity android:name=".About" />
        <activity android:name=".ViewMessagesActivity" /> <!-- âœ… Newly added -->

    </application>

</manifest>
