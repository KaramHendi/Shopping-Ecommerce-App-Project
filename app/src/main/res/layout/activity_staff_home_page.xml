<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/appbackground"
    tools:context=".StaffHomePage">

    <!-- Accept Orders Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/accpet_orders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“¦ Accept Orders"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_messages"
        app:layout_constraintVertical_bias="0.3" />

    <!-- View Messages Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_messages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ’¬ View Messages"
        app:layout_constraintTop_toBottomOf="@id/accpet_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/current_order_status"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Current Order Status Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/current_order_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸšš Order Status"
        app:layout_constraintTop_toBottomOf="@id/view_messages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
